<% exceptions = [] unless exceptions %>
       

<%= form_with model: model, class: 'form row mb-3', html: {novalidate: true}  do |form| %>
  <% model.attributes.except(*exceptions).each do |key, _| %>
    <div class="mb-3 col-12 col-sm-6">
      <%= form.label key, class: 'form-label' %><br>
      <%= form.text_field key, class: 'form-control', autocomplete: key %>
      <% model.errors.full_messages_for(key).each do |message| %>
        <div class="form-error-message"><%= message %></div>
      <% end %>
    </div>
  <% end %>
  <div>
    <%= form.submit class: 'mt-3 btn btn-primary'  %>
  </div>
<% end %>
