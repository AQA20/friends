<% if user_signed_in? %>
  <div class="dropdown">
    <a class="dropdown-toggle profile-dropdown-menu"  data-bs-toggle="dropdown" aria-expanded="false">
      <% if current_user.avatar.attached?
      image_url = current_user.avatar
      else
      image_url = asset_path('profile.png')
    %>
    <%end%>
    <%= image_tag image_url, width: "50", height: "50px", class: "rounded-circle" %>
  </a>
  <ul class="dropdown-menu">
    <li>
      <a class="dropdown-item disabled" href="#" disabled="true">
        <strong><%= "#{current_user.first_name } #{current_user.last_name }" %></strong>
      </a>
      <li><hr class="dropdown-divider"></li>
      <li><%= link_to 'Edit profile', edit_user_registration_path, class: 'dropdown-item' %></li>
      <li> <%= button_to 'Logout', destroy_user_session_path, method: "delete", 'data-turbo': false , class: 'dropdown-item'%></li>
    </ul>
  </div>
<% else %>
  <%= link_to 'Login',  new_user_session_path, class: 'btn btn-outline-primary me-2' %>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary' %>
<% end %>
