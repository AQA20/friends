<div class="container">
  <%= render "page_header", title: 'Forgot your password', button: 'no' %>
  <%= render "devise_form", 
  model: @user, 
  url: password_path(@user),
  action: 'Reset password',
  fields_display: 'col',
  fields: [
    {
      name: 'email',
      type: :email_field,
      class_name: 'col-12 col-sm-4',
    }
  ] %>
</div>
