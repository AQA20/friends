<div class="container">
  <%= render "page_header", title: 'Edit account', button: 'no' %>
  <%= render "devise_form", 
    model: @user, 
    url: registration_path(@user),
    action: 'Update',
    image_uploader: true,
    fields: [
      {
        name: :first_name,
        type: :text_field,
      },
      {
        name: :last_name,
        type: :text_field,
      },      {
        name: :avatar,
        type: :file_field,
        accept: "image/png, image/jpg, image/jpeg" ,
        label: "#{:avatar}  (leave blank if you don't want to change it)"
      },
      {
        name: :email,
        type: :email_field,
      },
      {
        name: :current_password,
        type: :password_field,
        label: "#{:current_password} (your current password to confirm your changes)"
      },
      {
        name: :password,
        type: :password_field,
        label: "#{:password} (leave blank if you don't want to change it)"
      },
      {
        name: :password_confirmation,
        type: :password_field,
      },
    ]
     %>
</div>
