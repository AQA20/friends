<div class="container">
  <%= render "page_header", title: 'Sign up', button: 'no' %>
  
  <%= render "devise_form", 
    model: @user, 
    url: registration_path(@user),
    action: 'Sign up',
    image_uploader: true,
    fields: [
      {
        name: :first_name,
        type: :text_field,
      },
      {
        name: :last_name,
        type: :text_field,
      },
      {
        name: :avatar,
        type: :file_field,
        accept: "image/png, image/jpg, image/jpeg" 
      },
      {
        name: :email,
        type: :email_field,
      },
      {
        name: :password,
        type: :password_field,
      },
      {
        name: :password_confirmation,
        type: :password_field,
      }
    ]
     %>
</div>
