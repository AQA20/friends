<% class_name = 'btn btn-outline-primary' unless class_name %>

<%= link_to 'Delete', "#modal-#{friend.id}", 
            class: class_name, 
            data:  {'bs-toggle' => "modal", 'bs-target' => "#modal-#{friend.id}"}%>

<%= render "confirm_dialog",  
              id: friend.id,
              header: 'Confirm delete', 
              dismiss_title: 'Cancel', 
              content: 'Are you sure you want to delete this friend?' do %>
  <%# Action content %>
  <%= link_to "Delete", friend, data: {turbo_method: :delete}, class: "btn btn-outline-primary" %>
<% end %>
